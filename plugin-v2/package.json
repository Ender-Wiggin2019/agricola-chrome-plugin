{
  "name": "agricola-tutor",
  "displayName": "__MSG_extensionName__",
  "version": "0.1.0",
  "description": "__MSG_extensionDescription__",
  "author": "Ender",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build && npm run postbuild",
    "postbuild": "cp assets/cards.json build/chrome-mv3-prod/ && cp assets/authors.json build/chrome-mv3-prod/",
    "package": "plasmo package",
    "zip": "pnpm build && cd build/chrome-mv3-prod && zip -r ../../agricola-tutor.zip .",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch stable",
    "release:minor": "./scripts/release.sh minor stable",
    "release:major": "./scripts/release.sh major stable",
    "release:alpha": "./scripts/release.sh patch alpha",
    "release:beta": "./scripts/release.sh patch beta"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "default_locale": "en",
    "permissions": [
      "sidePanel"
    ],
    "host_permissions": [
      "https://boardgamearena.com/*",
      "http://localhost:*/*",
      "http://127.0.0.1:*/*",
      "file:///*"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "cards.json",
          "authors.json"
        ],
        "matches": [
          "https://boardgamearena.com/*",
          "http://localhost:*/*",
          "http://127.0.0.1:*/*",
          "file:///*"
        ]
      }
    ]
  }
}
